{
  "kind": "collectionType",
  "collectionName": "post_categories",
  "info": {
    "singularName": "post-category",
    "pluralName": "post-categories",
    "displayName": "Post Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "posts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post.post",
      "inversedBy": "post_categories"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
